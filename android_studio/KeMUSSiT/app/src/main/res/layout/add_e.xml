<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wave_test" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/kemu" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circle_center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="[KEMUSSit]~Kenya Methodist University"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/hinter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Purpose of the Event?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/myCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hinter"
                        android:hint="Enter theme here!!"
                        android:maxLength="50"
                        android:textColor="#000" />

                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/myCode"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/remTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textColor="#ff0000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/setTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:layout_toEndOf="@+id/remTimer"
                            android:text="/50"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardtwo"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <Button
                    android:id="@+id/spinButton"
                    style="?android:spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/myDep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardThre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardy"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/cooler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Is there a landmark near the Venue?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/myTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cooler"
                        android:hint="enter Landmark"
                        android:maxLength="50"
                        android:textColor="#000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardThre"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/begger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Which Site or Hall?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/myCred"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/begger"
                        android:hint="enter venue site"
                        android:maxLength="50"
                        android:textColor="#000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardf"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/takeCare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="When is the Event?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/myBtnDate"
                        style="?android:spinnerStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/takeCare"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/yrs"
                        android:inputType="date"
                        android:text="Set Date"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardSam"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/tm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At what Time?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/myTime"
                        style="?android:spinnerStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tm"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/timer"
                        android:inputType="date"
                        android:text="Set Time"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/still"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Timer"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Is there a membership participation limit?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/myCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/yes"
                        android:hint="enter Max Membership"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="#000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/oneDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/still"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="12sp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp">

                    <TextView
                        android:id="@+id/sikuMoja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How much is Contribution per Member?"
                        android:textColor="#000"
                        android:textStyle="bold|italic" />

                    <EditText
                        android:id="@+id/myDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sikuMoja"
                        android:hint="enter Contribution"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="#000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>