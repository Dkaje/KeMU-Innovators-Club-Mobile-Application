<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounda"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/Stu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/stud" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:fontFamily="sans-serif"
                android:text="Student"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Student"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="-65sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="50dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/aloft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounda"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/sc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/sec" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aloft"
                android:fontFamily="sans-serif"
                android:text="Sec. Gen"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Student"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-65sp"
        android:layout_marginEnd="10sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/kingd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounda"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/org" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kingd"
                android:fontFamily="sans-serif"
                android:text="Org. Sec"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/champee"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_gravity="fill"
        android:background="#fff"
        app:cardCornerRadius="50dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounda"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/stud" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/men"
                android:fontFamily="sans-serif"
                android:text="Lecturer"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Patron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Lecture"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="-65sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/yess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounda"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pat" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yess"
                android:fontFamily="sans-serif"
                android:text="Patron"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Treasurer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Lecture"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="-65sp"
        android:clickable="true"
        android:elevation="10sp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/moro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounda"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10sp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tres" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moro"
                android:fontFamily="sans-serif"
                android:text="Treasurer"
                android:textColor="#000"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>