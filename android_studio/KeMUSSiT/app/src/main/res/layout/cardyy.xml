<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/printing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:elevation="8dp"
        app:cardCornerRadius="6sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/major">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/pond">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/mes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="10sp"
                            app:cardCornerRadius="75dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/confirmed"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@color/white"
                                    android:src="@drawable/kemu" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <com.example.kemussit.Kitendawili.Lineage
                            android:id="@+id/heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/mes"
                            android:gravity="center"
                            android:text="KENYA METHODIST UNIVERSITY\nKEMUSSiT"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cardType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/heading"
                            android:layout_marginTop="1sp"
                            android:layout_toEndOf="@+id/mes"
                            android:fontFamily="cursive"
                            android:gravity="center"
                            android:text="type"
                            android:textColor="#147103"
                            android:textSize="18dp"
                            android:textStyle="bold|normal" />

                        <TextView
                            android:id="@+id/cardNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cardType"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8sp"
                            android:layout_toEndOf="@+id/user"
                            android:gravity="end"
                            android:text="cardNo"
                            android:textColor="#ff0000"
                            android:textStyle="bold|normal" />

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cardNo"
                            android:layout_marginStart="10sp"
                            android:layout_toEndOf="@+id/user"
                            android:text="holder"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/issued"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userName"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/user"
                            android:text="holder"
                            android:textColor="@color/major"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/holderS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/issued"
                            android:layout_marginStart="10sp"
                            android:layout_toStartOf="@+id/sigmaF"
                            android:layout_toEndOf="@+id/user"
                            android:gravity="end"
                            android:text="holder's sign: "
                            android:textColor="#0521AF"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/sigmaF"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/issued"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="-6sp"
                            android:layout_marginTop="-8sp"
                            android:src="@drawable/hide" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mes"
                            android:layout_marginTop="40dp"
                            android:elevation="10sp"
                            app:cardCornerRadius="75dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/userProfile"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:background="@color/white"
                                    android:src="@drawable/kemu" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>